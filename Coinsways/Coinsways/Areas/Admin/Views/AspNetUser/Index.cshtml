@model IEnumerable<Coinsways.Entities.AspNetUser>

@{
    ViewBag.Title = "Web Users::";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <h4 class="title">Users Master</h4>
                        <p>
                            @Html.ActionLink("Create New", "Create", null, new { @class = "btn-danger", @style = "padding: 5px; border-radius: 4px;" })
                        </p>
                    </div>
                    <div class="card-content table-responsive">
                        <table class="display responsive no-wrap" style="width: 100%;" id="usersTbl">
                            <thead>
                                <tr>
                                    <th>
                                        User Id
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PhoneNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UserName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LastLogin)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CoinswaysUserId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LastLogin)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#usersTbl").dataTable({
        responsive: true,
        "bLengthChange": false,
        "pageLength": 10,
        "aoColumnDefs": [
            { 'bSortable': false, 'aTargets': [5] }
        ]

    });
</script>